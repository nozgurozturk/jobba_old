{
  "name": "jobba",
  "version": "0.0.1",
  "description": "Jobba the Hub - Collect jobs",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.js --exec \"node -r dotenv/config\"",
    "test": "NODE_ENV=mocha mocha -r dotenv/config --recursive './{,!(node_modules)/**}/*.test.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
