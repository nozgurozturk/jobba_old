  "keywords": [
    "job",
    "search",
    "mark",
    "save",
    "collect"
  ],
  "author": "Ozgur Ozturk",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.10.1",
    "bcrypt": "^3.0.8",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.1",
    "throng": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "expect": "^25.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
